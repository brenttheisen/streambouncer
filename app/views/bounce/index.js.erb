$('#bounce-pop-out').hide();

$('#follow_<%= @follow.id %>')
  .removeClass('active')
  .removeClass('no-bounce')
  .addClass('bounce')
  .find('div.bounce-info-container')
    .html("<%= escape_javascript(render(:partial => 'search/bounce_info', :locals => { :follow => @follow })) %>")
    .slideDown();

<% 
  @follows.each_with_index { |follow, index|
    twitter_user = follow.twitter_user 
%>
  <li id="follow_<%= follow.id %>" class="<%= follow.bounce.nil? ? 'no-bounce' : 'bounce' %> <%= (index +2) % 2 == 0 ? 'even' : 'odd' %>">
    <% if follow.bounce.nil? %>
      <div class="pop-out" style="display: none;">
        <div class="calendar"></div>
        <a class="bounce-link button bounce ajax" href="/bounce?id=<%= follow.id %>">Bounce</a>
      </div>
    <% else %>
      <div class="pop-out">
        <div class="calendar"></div>
        <a class="bounce-link button un-bounce ajax" href="/unbounce?id=<%= follow.id %>_<%= follow.bounce.id %>">Un-Bounce</a>
      </div>
    <% end %>
    <div class="clear"></div>
    <img src="<%= twitter_user.picture_url %>" />
    <div class="name"><%= twitter_user.name %></div>
    <div class="username"><%= twitter_user.username %></div>
    <div class="tweet-container">
      <div class="last-tweet"><%= twitter_user.last_tweet %></div>
      <div class="last-tweet-at"><%= distance_of_time_in_words(twitter_user.last_tweet_at, Time.now) %> ago</div>
    </div>
  </li>
<% } %>
